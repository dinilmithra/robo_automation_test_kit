# PyCharm debugger configuration - disables file validation for faster debugging
PYDEVD_DISABLE_FILE_VALIDATION=1

# Application environment name - displayed in report header (e.g., UAT, PROD, DEV)
APP_ENV=UAT

# Enable/disable parallel test execution with pytest-xdist (Y=parallel, N=serial)
PARALLEL_EXECUTION=Y

# Run browser in headless mode without GUI (Y=headless, N=visible browser)
HEADLESS=Y

# WebDriver explicit wait timeout in seconds
WAIT_TIME=20

# Application URL for test execution
APP_URL=https://dinilmithra.github.io/robo_appian/

# Project name displayed in report header
PROJECT_NAME=Robo

# Test framework name displayed in report footer
TEST_FRAMEWORK=Robo Automation Framework

# HTML report title/heading
REPORT_TITLE=Test Execution Dashboard

# HTML report file path (default: reports/test_report.html if not specified)
# Example: reports/custom_report.html or C:/reports/test_report_20240101.html
REPORT_PATH=reports

# Base folder for CSV/Excel data files used by @pytest.mark.datafile(...)
# Relative paths resolve from project root; absolute paths are supported
# On Windows, leading-slash paths like /data are treated as project-root relative
DATA_FILES_PATH=data



